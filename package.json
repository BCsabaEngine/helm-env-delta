{
  "name": "helm-env-delta",
  "version": "1.13.1",
  "description": "HelmEnvDelta â€“ environment-aware YAML delta and sync for GitOps",
  "author": "BCsabaEngine",
  "license": "ISC",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "engines": {
    "node": ">=22",
    "npm": ">=9"
  },
  "files": [
    "bin/*.js",
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "bin": {
    "helm-env-delta": "bin/index.js",
    "hed": "bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BCsabaEngine/helm-env-delta.git"
  },
  "bugs": {
    "url": "https://github.com/BCsabaEngine/helm-env-delta/issues"
  },
  "homepage": "https://github.com/BCsabaEngine/helm-env-delta",
  "scripts": {
    "dev": "tsx src/index.ts -c ./example.dev/config.yaml",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "test:perf": "vitest bench --run",
    "test:perf:json": "vitest bench --run --reporter=json --outputFile=benchmark-results.json",
    "test:all": "node --run test && node --run test:perf",
    "clean": "tsc --build --clean",
    "build": "tsc --build --clean && tsc --build",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write . | grep -v 'unchanged' | sed G",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "fix": "node --run format:fix && node --run lint:fix && node --run format:fix",
    "all": "node --run fix && node --run build && node --run test",
    "npm:reinstall": "rm -rf ./node_modules && rm -f ./package-lock.json && npm i && npm i"
  },
  "keywords": [
    "helm",
    "env",
    "delta",
    "yaml",
    "gitops",
    "kubernetes",
    "devops",
    "configuration",
    "sync",
    "automation"
  ],
  "devDependencies": {
    "@eslint/js": "^10.0.0",
    "@types/node": "^25.3.0",
    "@types/picomatch": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^63.0.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "diff": "^8.0.3",
    "diff2html": "3.4.56",
    "open": "^11.0.0",
    "picomatch": "^4.0.3",
    "tinyglobby": "^0.2.15",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  }
}
